package com.fmSport.service;

import java.util.List;

import org.springframework.stereotype.Service;

import com.fmSport.model.Servicio;
import com.fmSport.repository.ServicioRepository;

@Service
public class ServicioService {

	ServicioRepository sr;

	public Servicio crear(Servicio s) {
		return sr.save(s);
	}

	public List<Servicio> listar() {
		return sr.findAll();
	}

	public Servicio buscarPorId(Long id) {
		return sr.findById(id).orElse(null);
	}

	public Servicio actualizar(Long id, Servicio datos) {
		Servicio s = buscarPorId(id);
		if (s != null) {
			s.setNombre(datos.getNombre());
			s.setCategoria(datos.getCategoria());
			s.setDuracionMin(datos.getDuracionMin());
			s.setPrecioBase(datos.getPrecioBase());
			s.setDescripcion(datos.getDescripcion());
			s.setActivo(datos.getActivo());
			return sr.save(s);
		} else {
			return null;
		}
	}
}
